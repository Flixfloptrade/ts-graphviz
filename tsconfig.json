{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "ts-graphviz": ["./packages/ts-graphviz/src/ts-graphviz.js"],
      "ts-graphviz/ast": ["./packages/ts-graphviz/src/ast.js"],
      "ts-graphviz/adapter": ["./packages/ts-graphviz/src/adapter.js"]
    }
  },
  "exclude": ["e2e"]
}
