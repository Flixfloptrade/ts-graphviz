{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["package.json", "pnpm-lock.yaml", "tsconfig.json"],
  "pipeline": {
    "codegen": {},
    "//#codegen": {
      "dependsOn": ["@ts-graphviz/adapter#codegen"]
    },
    "@ts-graphviz/adapter#codegen": {
      "dependsOn": ["^codegen"],
      "inputs": [
        "package.json",
        "src/dot-shim/parser/dot.peggy",
        "src/dot-shim/parser/peggy.options.json"
      ],
      "outputs": ["src/dot-shim/parser/_parse.ts"]
    },
    "//#test:unit": {
      "dependsOn": ["codegen"],
      "inputs": ["packages", "test", "vitest.config.ts"],
      "outputs": ["coverage/**"]
    },
    "test:unit": {
      "dependsOn": ["codegen", "^test:unit"]
    },
    "build": {
      "dependsOn": ["codegen", "^build"],
      "inputs": [
        "src/**",
        "tsconfig.json",
        "vite.config.ts",
        "!**/*.test.ts",
        "!**/*.spec.ts"
      ],
      "outputs": ["lib/**"]
    },
    "test:integration:build": {
      "dependsOn": ["build"],
      "inputs": ["**/*.js", "**/*/ts"],
      "outputs": ["dist/**"]
    },
    "test:integration": {
      "inputs": ["**/*.js", "**/*/ts"],
      "dependsOn": ["test:integration:build"]
    }
  }
}
